<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="fill_horizontal"
    android:layout_height="wrap_content">

   <include layout="@layout/back_toolbar"
       android:id="@+id/include"/>

    <ListView
        android:id="@+id/reviewslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginBottom="@dimen/height_of_footer"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector">
    </ListView>

  <RelativeLayout
      android:id="@+id/linearComment"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_of_footer"
      android:background="@color/caldroid_black"
      android:layout_below="@+id/reviewslist">

     <RatingBar
         android:id="@+id/rating"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_alignTop="@+id/txtRate"
         android:layout_alignBottom="@+id/txtRate" />

     <TextView
         android:id="@+id/txtRate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/reviews_rate_residence"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:layout_marginBottom="32dp" />

     <EditText
         android:id="@+id/writeComment"
         android:layout_width="wrap_content"
         android:layout_height="100dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/rating"
         android:hint="@string/reviews_write"
         android:ems="10"
         android:textAlignment="center"
         android:inputType="textMultiLine"
         android:layout_toStartOf="@+id/btnreview" />

     <ImageButton
         android:id="@+id/btnreview"
         android:layout_width="40dp"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:backgroundTint="@color/caldroid_333"
         android:text="@string/message_send"
         android:textColor="@android:color/white"
         app:srcCompat="@mipmap/ic_send"
         android:layout_alignTop="@+id/writeComment" />
  </RelativeLayout>

    <!--<include layout="@layout/footer" />-->
</RelativeLayout>